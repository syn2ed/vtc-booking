{% extends 'base.html.twig' %}

{% block body %}
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            {% if ( label == 'success' ) %}
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4 class="alert-heading">Inscription validée!</h4>
                    <p class="mb-0">{{ flash }}</p>
                </div>
                {#
            {% elseif ( label == 'error' ) %}
                <div class="alert alert-dismissible alert-warning">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h4 class="alert-heading">Warning!</h4>
                    <p class="mb-0">{{ flash }}</p>
                </div>
                #}
            {% endif %}
        {% endfor %}
    {% endfor %}

    <div id="div_connexion" class="card panel-default">
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active">
                    <h3 class="text-center">Connexion</h3>

                    <p class="text-center">
                        <br>
                        Merci d'utiliser le formulaire suivant pour vous connecter.
                        <br>
                    </p>

                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form-group">
                            <label for="registration_email" class="required">Adresse e-mail</label>
                            <input placeholder="exemple@live.fr" required name="_username" type="text"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="registration_email" class="required">Mot de passe</label>
                            <input placeholder="Mot de passe" required name="_password" type="password"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-block btn-primary">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
            <ul class="toggler text-center small list-unstyled" role="tablist">
                <li role="presentation">Vous n'avez pas de compte ? <a href="{{ path('security_registration') }}">Inscription</a></li>
                <li role="presentation"><a href="mdp-oublie">Mot de passe oublié ?</a></li>
            </ul>
        </div>
    </div>
{% endblock %}